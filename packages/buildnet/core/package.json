{
  "name": "@buildnet/core",
  "version": "1.0.0",
  "description": "Distributed build system with hot-swappable bundlers, plugins, and DragonflyDB state management",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "buildnet": "./dist/cli/daemon-cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./controller": {
      "import": "./dist/controller/index.js",
      "types": "./dist/controller/index.d.ts"
    },
    "./worker": {
      "import": "./dist/worker/index.js",
      "types": "./dist/worker/index.d.ts"
    },
    "./state": {
      "import": "./dist/state/index.js",
      "types": "./dist/state/index.d.ts"
    },
    "./plugins": {
      "import": "./dist/plugins/index.js",
      "types": "./dist/plugins/index.d.ts"
    },
    "./bundlers": {
      "import": "./dist/bundlers/index.js",
      "types": "./dist/bundlers/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc && node -e \"const fs=require('fs');const f='dist/cli/daemon-cli.js';const c=fs.readFileSync(f,'utf8');fs.writeFileSync(f,'#!/usr/bin/env node\\n'+c.replace(/^#!.*\\n/,''));fs.chmodSync(f,'755')\"",
    "watch": "tsc -w",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint src/",
    "clean": "rm -rf dist/"
  },
  "dependencies": {
    "yaml": "^2.3.0",
    "chokidar": "^3.5.0",
    "glob": "^10.0.0",
    "picocolors": "^1.0.0",
    "pino": "^8.17.0",
    "pino-pretty": "^10.3.0",
    "eventemitter3": "^5.0.0",
    "proper-lockfile": "^4.1.0",
    "uuid": "^9.0.0"
  },
  "optionalDependencies": {
    "ioredis": "^5.3.0",
    "@grpc/grpc-js": "^1.9.0",
    "@grpc/proto-loader": "^0.7.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/proper-lockfile": "^4.1.4",
    "@types/uuid": "^9.0.0",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "vite": ">=5.0.0",
    "esbuild": ">=0.19.0",
    "@rspack/core": ">=1.0.0"
  },
  "peerDependenciesMeta": {
    "vite": {
      "optional": true
    },
    "esbuild": {
      "optional": true
    },
    "@rspack/core": {
      "optional": true
    }
  },
  "files": [
    "dist/",
    "README.md"
  ],
  "keywords": [
    "build",
    "bundler",
    "distributed",
    "vite",
    "rspack",
    "esbuild",
    "dragonflydb",
    "redis"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/musclemap/buildnet"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
